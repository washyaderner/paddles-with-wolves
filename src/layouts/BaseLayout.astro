---
import { ViewTransitions } from 'astro:transitions';
import FloatingNav from '../components/navigation/FloatingNav.astro';
import AnimatedBackground from '../components/backgrounds/AnimatedBackground.astro';
import ShoppingCart from '../components/cart/ShoppingCart.astro';
import FloatingContactBubbles from '../components/contact/FloatingContactBubbles.astro';
import LoadingScreen from '../components/ui/LoadingScreen.astro';
import ScrollProgress from '../components/ui/ScrollProgress.astro';
import '../styles/global.css';
import '../styles/button-interactions.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string;
  author?: string;
  type?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
  backgroundTheme?: 'mountain' | 'water' | 'forest' | 'sunset' | 'mystic';
}

const {
  title = 'Paddles with Wolves - Healing Arts & Wellness',
  description = 'Holistic healing services combining ancient wisdom with modern wellness practices. Discover transformative healing through massage, energy work, and natural apothecary.',
  image = '/og-images/default-og.jpg',
  keywords = 'healing arts, wellness, holistic health, massage therapy, energy healing, natural remedies, apothecary, spiritual healing, alternative medicine',
  author = 'Paddles with Wolves',
  type = 'website',
  canonicalUrl,
  noIndex = false,
  backgroundTheme = 'mystic'
} = Astro.props;

const canonicalURL = canonicalUrl ? new URL(canonicalUrl, Astro.site) : new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);
const siteName = 'Paddles with Wolves';
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Favicon & App Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#6B46C1" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Robots -->
    {noIndex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow" />
    )}
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:image:alt" content={title} />

    <!-- Additional SEO -->
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content={siteName} />

    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "HealthAndBeautyBusiness",
        "name": "Paddles with Wolves",
        "description": "Holistic healing arts and wellness services",
        "url": "https://paddleswithwolves.com",
        "logo": "https://paddleswithwolves.com/favicons/apple-touch-icon.png",
        "image": "https://paddleswithwolves.com/og-images/default-og.jpg",
        "priceRange": "$$",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Your City",
          "addressRegion": "Your State",
          "addressCountry": "US"
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "09:00",
            "closes": "18:00"
          }
        ],
        "sameAs": [
          "https://facebook.com/paddleswithwolves",
          "https://instagram.com/paddleswithwolves"
        ]
      }
    </script>

    <!-- Preload fonts for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload critical assets -->
    <link rel="preload" href="/src/styles/global.css" as="style" />

    <!-- View Transitions -->
    <ViewTransitions />
  </head>

  <body>
    <!-- Loading Screen -->
    <LoadingScreen />

    <!-- Scroll Progress Indicator -->
    <ScrollProgress />

    <!-- Animated Background -->
    <AnimatedBackground theme={backgroundTheme} />

    <!-- Navigation -->
    <FloatingNav />

    <!-- Main Content -->
    <main class="main-content">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>Paddles with Wolves</h3>
            <p>Healing arts and wellness services rooted in ancient wisdom.</p>
            <p class="footer-tagline">Restore. Renew. Reconnect.</p>
          </div>

          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/services">Services</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/apothecary">Apothecary</a></li>
              <li><a href="/booking">Book Now</a></li>
            </ul>
          </div>

          <div class="footer-section">
            <h4>Connect</h4>
            <ul>
              <li><a href="/contact">Contact</a></li>
              <li><a href="mailto:info@paddleswithwolves.com">Email</a></li>
              <li><a href="tel:+1234567890">Call Us</a></li>
            </ul>
          </div>

          <div class="footer-section">
            <h4>Hours</h4>
            <p class="hours">Mon-Fri: 9am - 6pm</p>
            <p class="hours">Sat-Sun: By Appointment</p>
          </div>
        </div>

        <div class="footer-bottom">
          <p>&copy; {currentYear} Paddles with Wolves. All rights reserved.</p>
          <p class="footer-links">
            <a href="/privacy">Privacy Policy</a> â€¢
            <a href="/terms">Terms of Service</a>
          </p>
        </div>
      </div>
    </footer>

    <!-- Shopping Cart -->
    <ShoppingCart />

    <!-- Floating Contact Bubbles -->
    <FloatingContactBubbles />

    <!-- Animation Scripts -->
    <script src="../scripts/scroll-animations.ts"></script>
    <script src="../scripts/button-magnetic.ts"></script>
    <script src="../scripts/page-transitions.ts"></script>

    <style>
      .main-content {
        position: relative;
        z-index: 1;
        min-height: 100vh;
        padding-top: 100px;
      }

      .site-footer {
        position: relative;
        z-index: 1;
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(12px);
        border-top: 1px solid rgba(107, 70, 193, 0.3);
        padding: var(--space-16) 0 var(--space-8);
        margin-top: var(--space-32);
      }

      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--space-8);
        margin-bottom: var(--space-8);
      }

      .footer-section h3,
      .footer-section h4 {
        color: var(--sunset-gold);
        margin-bottom: var(--space-4);
        font-size: var(--text-lg);
      }

      .footer-section p {
        color: var(--light-gray);
        font-size: var(--text-sm);
        line-height: var(--line-height-relaxed);
      }

      .footer-tagline {
        font-style: italic;
        color: var(--dusk-lavender);
        margin-top: var(--space-2);
      }

      .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .footer-section ul li {
        margin-bottom: var(--space-2);
      }

      .footer-section ul li a {
        color: var(--light-gray);
        text-decoration: none;
        transition: color var(--transition-base);
        font-size: var(--text-sm);
      }

      .footer-section ul li a:hover {
        color: var(--sunset-gold);
      }

      .hours {
        margin-bottom: var(--space-1);
        font-size: var(--text-sm);
      }

      .footer-bottom {
        text-align: center;
        padding-top: var(--space-8);
        border-top: 1px solid rgba(107, 70, 193, 0.2);
      }

      .footer-bottom p {
        color: var(--medium-gray);
        font-size: var(--text-sm);
        margin-bottom: var(--space-2);
      }

      .footer-links a {
        color: var(--medium-gray);
        text-decoration: none;
        transition: color var(--transition-base);
      }

      .footer-links a:hover {
        color: var(--sunset-gold);
      }

      @media (max-width: 768px) {
        .main-content {
          padding-top: 80px;
        }

        .footer-content {
          grid-template-columns: 1fr;
          gap: var(--space-6);
        }
      }
    </style>
  </body>
</html>
