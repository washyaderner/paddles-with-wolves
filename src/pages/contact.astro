---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import LocationMap from '../components/contact/LocationMap.astro';
---

<BaseLayout
  title="Contact Us - Paddles with Wolves"
  description="Get in touch with Paddles with Wolves. Send us a message, schedule a consultation, or find our Pacific Northwest healing studio location."
  keywords="contact healing studio, Pacific Northwest wellness contact, schedule consultation, healing arts location, contact form"
  backgroundTheme="forest"
>
  <!-- Page Hero -->
  <section class="contact-hero">
    <div class="container">
      <div class="hero-content fade-in-up">
        <div class="hero-icon">üí´</div>
        <h1 class="page-title">Let's Connect</h1>
        <p class="page-subtitle">
          We'd love to hear from you
        </p>
        <p class="page-description">
          Whether you have questions about our services, want to schedule a consultation,
          or simply want to learn more about healing arts‚Äîwe're here to help guide you
          on your wellness journey.
        </p>
      </div>
    </div>
  </section>

  <!-- Split Layout: Form & Location -->
  <section class="contact-split-section">
    <div class="container">
      <div class="split-layout">
        <!-- Left: Contact Form -->
        <div class="split-panel form-panel">
          <ContactForm />
        </div>

        <!-- Right: Location Map -->
        <div class="split-panel map-panel">
          <LocationMap />
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Info Section -->
  <section class="contact-info-section fade-in-scroll">
    <div class="container">
      <h2 class="section-title text-gradient-healing">More Ways to Connect</h2>

      <div class="info-grid">
        <!-- Office Hours -->
        <div class="info-card glass">
          <div class="info-icon">üïê</div>
          <h3>Office Hours</h3>
          <div class="hours-list">
            <div class="hours-item">
              <span class="day">Monday - Friday</span>
              <span class="time">9:00 AM - 6:00 PM</span>
            </div>
            <div class="hours-item">
              <span class="day">Saturday</span>
              <span class="time">10:00 AM - 4:00 PM</span>
            </div>
            <div class="hours-item">
              <span class="day">Sunday</span>
              <span class="time">By Appointment</span>
            </div>
          </div>
          <p class="hours-note">Evening and weekend appointments available upon request</p>
        </div>

        <!-- Response Time -->
        <div class="info-card glass">
          <div class="info-icon">‚ö°</div>
          <h3>Response Time</h3>
          <p>
            We typically respond to all inquiries within 24 hours during business days.
            For urgent matters, please call us directly.
          </p>
          <div class="contact-links">
            <a href="tel:+15551234567" class="contact-link">
              üìû (555) 123-4567
            </a>
            <a href="mailto:info@paddleswithwolves.com" class="contact-link">
              üìß info@paddleswithwolves.com
            </a>
          </div>
        </div>

        <!-- What to Include -->
        <div class="info-card glass">
          <div class="info-icon">üìù</div>
          <h3>What to Include</h3>
          <p>To help us serve you better, please include:</p>
          <ul class="include-list">
            <li>Your wellness goals or concerns</li>
            <li>Any relevant health conditions</li>
            <li>Preferred appointment times</li>
            <li>Questions about specific services</li>
          </ul>
        </div>

        <!-- Privacy -->
        <div class="info-card glass">
          <div class="info-icon">üîí</div>
          <h3>Your Privacy</h3>
          <p>
            All information shared with us is kept strictly confidential and used only
            to provide you with the best possible care and service.
          </p>
          <a href="/privacy" class="privacy-link">
            Read our Privacy Policy ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="contact-faq-section fade-in-scroll">
    <div class="container">
      <h2 class="section-title text-gradient-sunset">Common Questions</h2>

      <div class="faq-list">
        <details class="faq-item glass">
          <summary class="faq-question">
            <span>How do I schedule my first appointment?</span>
            <span class="faq-icon">+</span>
          </summary>
          <div class="faq-answer">
            <p>
              You can book directly through our <a href="/booking">online booking system</a>,
              send us a message through the contact form above, or call us at (555) 123-4567.
              We offer a free 15-minute consultation to discuss your needs and determine
              the best service for you.
            </p>
          </div>
        </details>

        <details class="faq-item glass">
          <summary class="faq-question">
            <span>Do you offer virtual consultations?</span>
            <span class="faq-icon">+</span>
          </summary>
          <div class="faq-answer">
            <p>
              Yes! We offer virtual sessions for herbal consultations and some energy healing
              guidance via video call. In-person sessions are available for therapeutic
              bodywork and hands-on energy work.
            </p>
          </div>
        </details>

        <details class="faq-item glass">
          <summary class="faq-question">
            <span>What should I bring to my first session?</span>
            <span class="faq-icon">+</span>
          </summary>
          <div class="faq-answer">
            <p>
              Just bring yourself and an open mind! Wear comfortable, loose-fitting clothing.
              If you have any relevant medical records or a list of current medications/supplements,
              that can be helpful but is not required.
            </p>
          </div>
        </details>

        <details class="faq-item glass">
          <summary class="faq-question">
            <span>Is parking available?</span>
            <span class="faq-icon">+</span>
          </summary>
          <div class="faq-answer">
            <p>
              Yes, we have free parking available on-site. Detailed parking instructions
              will be included in your appointment confirmation email.
            </p>
          </div>
        </details>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Page Hero */
  .contact-hero {
    padding: var(--space-20) 0 var(--space-12);
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-icon {
    font-size: 5rem;
    margin-bottom: var(--space-6);
    filter: drop-shadow(0 0 20px rgba(107, 70, 193, 0.5));
    animation: float-gentle 4s ease-in-out infinite;
  }

  @keyframes float-gentle {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(10deg);
    }
  }

  .page-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-family: var(--font-heading);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    margin-bottom: var(--space-4);
    color: var(--white);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    opacity: 1;
  }

  .page-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    color: var(--sunset-gold);
    margin-bottom: var(--space-6);
    font-weight: var(--font-weight-semibold);
    font-style: italic;
    opacity: 1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .page-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Split Layout Section */
  .contact-split-section {
    padding: var(--space-12) 0;
  }

  .split-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  .split-panel {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .form-panel {
    animation-delay: 0.2s;
  }

  .map-panel {
    animation-delay: 0.4s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Additional Info Section */
  .contact-info-section {
    padding: var(--space-32) 0;
    background: rgba(15, 23, 42, 0.3);
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-12);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .info-card {
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    transition: all var(--transition-base);
    text-align: center;
  }

  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl), var(--shadow-glow-purple);
  }

  .info-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
    filter: drop-shadow(0 0 10px rgba(253, 180, 98, 0.5));
  }

  .info-card h3 {
    font-size: var(--text-xl);
    color: var(--sunset-gold);
    margin-bottom: var(--space-4);
    font-family: var(--font-heading);
  }

  .info-card p {
    font-size: var(--text-base);
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    margin: 0 0 var(--space-4) 0;
  }

  /* Hours List */
  .hours-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-2) 0;
    border-bottom: 1px solid rgba(107, 70, 193, 0.2);
  }

  .day {
    font-weight: var(--font-weight-semibold);
    color: var(--light-gray);
  }

  .time {
    color: var(--sunset-gold);
  }

  .hours-note {
    font-size: var(--text-sm);
    color: var(--medium-gray);
    font-style: italic;
  }

  /* Contact Links */
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .contact-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-2);
    color: var(--light-gray);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .contact-link:hover {
    color: var(--sunset-gold);
  }

  /* Include List */
  .include-list {
    list-style: none;
    padding: 0;
    margin: var(--space-4) 0 0 0;
    text-align: left;
  }

  .include-list li {
    padding: var(--space-2) 0 var(--space-2) var(--space-6);
    position: relative;
    color: var(--light-gray);
  }

  .include-list li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--forest-green);
    font-weight: bold;
  }

  /* Privacy Link */
  .privacy-link {
    display: inline-flex;
    align-items: center;
    color: var(--sunset-gold);
    text-decoration: none;
    transition: all var(--transition-base);
    font-size: var(--text-sm);
  }

  .privacy-link:hover {
    color: var(--flame-orange);
    transform: translateX(4px);
  }

  /* FAQ Section */
  .contact-faq-section {
    padding: var(--space-32) 0;
  }

  .faq-list {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .faq-item {
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-base);
  }

  .faq-item:hover {
    box-shadow: var(--shadow-xl), var(--shadow-glow-purple);
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-size: var(--text-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--white);
    list-style: none;
    user-select: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-icon {
    font-size: var(--text-2xl);
    color: var(--sunset-gold);
    transition: transform var(--transition-base);
  }

  .faq-item[open] .faq-icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid rgba(107, 70, 193, 0.3);
  }

  .faq-answer p {
    font-size: var(--text-base);
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  .faq-answer a {
    color: var(--sunset-gold);
    text-decoration: underline;
  }

  .faq-answer a:hover {
    color: var(--flame-orange);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .split-layout {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
  }

  @media (max-width: 768px) {
    .contact-hero {
      padding: var(--space-16) 0 var(--space-8);
    }

    .hero-icon {
      font-size: 3.5rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }

    .faq-question {
      font-size: var(--text-base);
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-icon,
    .split-panel,
    .info-card,
    .faq-icon {
      animation: none;
      transition: none;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  function initContactPage() {
    // Animate info cards
    const infoCards = document.querySelectorAll('.info-card');
    infoCards.forEach((card, index) => {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top bottom-=100',
          toggleActions: 'play none none none',
        },
        y: 60,
        opacity: 0,
        duration: 0.6,
        delay: index * 0.1,
        ease: 'power3.out'
      });
    });

    // Animate FAQ items
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach((item, index) => {
      gsap.from(item, {
        scrollTrigger: {
          trigger: item,
          start: 'top bottom-=100',
          toggleActions: 'play none none none',
        },
        x: index % 2 === 0 ? -30 : 30,
        opacity: 0,
        duration: 0.6,
        ease: 'power3.out'
      });
    });
  }

  // Initialize contact page
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initContactPage);
  } else {
    initContactPage();
  }

  // Re-initialize on navigation
  document.addEventListener('astro:page-load', initContactPage);
</script>
