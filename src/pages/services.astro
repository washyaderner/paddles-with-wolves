<style>
  /* Hero Image Section */
  .services-hero-image {
    padding: var(--space-12) 0;
  }

  .hero-image {
    width: 100%;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-2xl), var(--shadow-glow-purple);
    border: 1px solid rgba(107, 70, 193, 0.3);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Page Hero */
  .services-hero {
    padding: var(--space-32) 0 var(--space-20);
    text-align: center;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-4);
  }

  .page-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.5rem);
    color: var(--light-gray);
    max-width: 800px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  /* Services Grid */
  .services-grid-section {
    padding: var(--space-20) 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
  }

  /* Details Section */
  .services-details-section {
    padding: var(--space-32) 0;
    background: rgba(15, 23, 42, 0.3);
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-16);
  }

  /* CTA Section */
  .services-cta-section {
    padding: var(--space-32) 0;
  }

  .cta-card {
    text-align: center;
    padding: var(--space-16) var(--space-8);
    border-radius: var(--radius-2xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-card h2 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--sunset-gold);
    margin-bottom: var(--space-6);
  }

  .cta-card p {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: var(--line-height-relaxed);
    color: var(--light-gray);
    margin-bottom: var(--space-8);
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Button Styles */
  .btn-primary-large {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-5) var(--space-12);
    font-size: var(--text-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--white);
    background: linear-gradient(135deg, var(--mystic-purple), var(--flame-orange));
    border: none;
    border-radius: var(--radius-full);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-lg), var(--shadow-glow-purple);
  }

  .btn-primary-large:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-2xl), var(--shadow-glow-healing);
  }

  .btn-ghost-large {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-5) var(--space-12);
    font-size: var(--text-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--white);
    background: transparent;
    border: 2px solid var(--mystic-purple);
    border-radius: var(--radius-full);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .btn-ghost-large:hover {
    border-color: var(--sunset-gold);
    color: var(--sunset-gold);
    box-shadow: var(--shadow-glow-purple);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .services-hero {
      padding: var(--space-20) 0 var(--space-12);
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .services-grid-section {
      padding: var(--space-12) 0;
    }

    .services-details-section {
      padding: var(--space-20) 0;
    }

    .services-cta-section {
      padding: var(--space-20) 0;
    }

    .cta-card {
      padding: var(--space-12) var(--space-6);
    }

    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .btn-primary-large,
    .btn-ghost-large {
      width: 100%;
      padding: var(--space-4) var(--space-8);
      font-size: var(--text-lg);
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  function initServicesAnimations() {
    // Animate service cards on scroll
    const serviceCards = document.querySelectorAll('.service-card');

    serviceCards.forEach((card, index) => {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top bottom-=100',
          end: 'top center',
          toggleActions: 'play none none none',
        },
        y: 60,
        opacity: 0,
        duration: 0.8,
        delay: index * 0.1,
        ease: 'power3.out'
      });
    });

    // Animate service details
    const serviceDetails = document.querySelectorAll('.service-detail');

    serviceDetails.forEach((detail) => {
      gsap.from(detail, {
        scrollTrigger: {
          trigger: detail,
          start: 'top bottom-=50',
          end: 'top center',
          toggleActions: 'play none none none',
        },
        y: 40,
        opacity: 0,
        duration: 1,
        ease: 'power2.out'
      });
    });

    // Animate CTA section
    const ctaCard = document.querySelector('.cta-card');
    if (ctaCard) {
      gsap.from(ctaCard, {
        scrollTrigger: {
          trigger: ctaCard,
          start: 'top bottom-=100',
          toggleActions: 'play none none none',
        },
        scale: 0.9,
        opacity: 0,
        duration: 0.8,
        ease: 'back.out(1.4)'
      });
    }
  }

  // Initialize animations
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initServicesAnimations);
  } else {
    initServicesAnimations();
  }

  // Re-initialize on navigation
  document.addEventListener('astro:page-load', initServicesAnimations);
</script>
