</BaseLayout>

<style>
  /* Sections */
  section {
    padding: var(--space-32) 0;
    position: relative;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    text-align: center;
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    text-align: center;
    font-size: var(--text-xl);
    color: var(--medium-gray);
    margin-bottom: var(--space-16);
    font-style: italic;
  }

  /* Services Preview */
  .services-preview {
    background: rgba(15, 23, 42, 0.3);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }

  .service-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: all var(--transition-base);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
    filter: drop-shadow(0 0 10px rgba(107, 70, 193, 0.5));
  }

  .service-card h3 {
    color: var(--sunset-gold);
    margin-bottom: var(--space-3);
    font-size: var(--text-2xl);
  }

  .service-card p {
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
  }

  .services-cta {
    text-align: center;
  }

  .btn-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xl);
    color: var(--sunset-gold);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    transition: all var(--transition-base);
  }

  .btn-link:hover {
    color: var(--amber-glow);
    gap: var(--space-4);
  }

  /* Philosophy Section */
  .philosophy-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  .philosophy-text h2 {
    text-align: left;
    margin-bottom: var(--space-6);
  }

  .philosophy-text p {
    margin-bottom: var(--space-6);
    font-size: var(--text-lg);
    line-height: var(--line-height-relaxed);
  }

  .philosophy-text blockquote {
    margin: var(--space-8) 0;
    padding: var(--space-6);
    border-left: 4px solid var(--mystic-purple);
    background: rgba(107, 70, 193, 0.1);
    border-radius: var(--radius-md);
    font-style: italic;
    color: var(--off-white);
  }

  .philosophy-text cite {
    display: block;
    margin-top: var(--space-3);
    font-size: var(--text-sm);
    font-style: normal;
    color: var(--sunset-gold);
  }

  .image-placeholder {
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-xl);
    padding: var(--space-8);
  }

  .image-icon {
    font-size: 6rem;
    margin-bottom: var(--space-4);
    filter: drop-shadow(0 0 20px rgba(107, 70, 193, 0.5));
  }

  .image-placeholder p {
    font-size: var(--text-xl);
    color: var(--dusk-lavender);
    font-style: italic;
  }

  /* Testimonials */
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
  }

  .testimonial-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
  }

  .testimonial-text {
    font-size: var(--text-lg);
    line-height: var(--line-height-relaxed);
    color: var(--light-gray);
    font-style: italic;
    margin-bottom: var(--space-6);
  }

  .testimonial-author {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .testimonial-author strong {
    color: var(--sunset-gold);
    font-size: var(--text-lg);
  }

  .testimonial-author span {
    color: var(--medium-gray);
    font-size: var(--text-sm);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    section {
      padding: var(--space-20) 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .philosophy-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .philosophy-text h2 {
      text-align: center;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }
</style>
