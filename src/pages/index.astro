---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/hero/HeroSection.astro';
import OptimizedImage from '../components/ui/OptimizedImage.astro';
import { Sparkles, Hand, Leaf, Brain } from 'lucide-astro';
---

<BaseLayout>
  <!-- Hero Section with Energy Particles -->
  <HeroSection />

  <!-- Services Preview Section -->
  <section class="services-preview">
    <div class="container">
      <h2 class="section-title text-gradient-healing">Healing Modalities</h2>
      <h3 class="section-subtitle">Ancient wisdom meets modern wellness</h3>

      <div class="services-grid">
        <div class="service-card glass hover-lift fade-in-up">
          <div class="service-image">
            <OptimizedImage
              src="/og-images/zen-lake.jpg"
              alt="Serene zen lake - Energy Healing"
              class="service-photo"
              loading="eager"
              objectFit="cover"
              aspectRatio="4 / 3"
            />
          </div>
          <h3>Energy Healing</h3>
          <p>Balance your body's natural energy flow through Reiki and chakra alignment.</p>
        </div>

        <div class="service-card glass hover-lift fade-in-up fade-delay-100">
          <div class="service-image">
            <OptimizedImage
              src="/og-images/purple-light.jpg"
              alt="Mystical purple light - Therapeutic Massage"
              class="service-photo"
              loading="eager"
              objectFit="cover"
              aspectRatio="4 / 3"
            />
          </div>
          <h3>Therapeutic Massage</h3>
          <p>Deep tissue and Swedish massage tailored to your body's needs.</p>
        </div>

        <div class="service-card glass hover-lift fade-in-up fade-delay-200">
          <div class="service-image">
            <OptimizedImage
              src="/og-images/lake-through-forest.jpg"
              alt="Lake through forest - Herbal Apothecary"
              class="service-photo"
              loading="eager"
              objectFit="cover"
              aspectRatio="4 / 3"
            />
          </div>
          <h3>Herbal Apothecary</h3>
          <p>Custom herbal blends and natural remedies from the Pacific Northwest.</p>
        </div>
      </div>

      <!-- Book Inspiration Section -->
      <div class="book-inspiration fade-in-up fade-delay-300">
        <div class="book-inspiration-content">
          <div class="book-image">
            <OptimizedImage
              src="/og-images/awaken-healing-light.jpg"
              alt="Awaken Healing Light of the Tao book cover"
              class="book-cover"
              loading="lazy"
              objectFit="contain"
              aspectRatio="3 / 4"
            />
          </div>
          <div class="book-text">
            <h3 class="book-title">A Foundational Guide</h3>
            <p>
              This book has been foundational to my practice. It's a comprehensive guide to healing yourself and others 
              through refining, circulating, and working with your energy. I'm grateful to Jacob for introducing me to 
              this book over 20 years ago!
            </p>
          </div>
        </div>
      </div>

      <div class="services-cta fade-in-up fade-delay-400">
        <a href="/services" class="btn-link">
          View All Services →
        </a>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="philosophy-section fade-in-scroll">
    <div class="container">
      <div class="philosophy-content">
        <div class="philosophy-text fade-in-left">
          <h2 class="section-title">Healing with Nature's Wisdom</h2>
          <p class="lead">
            In the heart of the Pacific Northwest, where mountains meet the sea and ancient forests whisper their secrets,
            I practice the healing arts as they were meant to be—in harmony with nature.
          </p>
          <p>
            Drawing from traditional Eastern medicine, indigenous wisdom, and modern holistic practices,
            I create a personalized healing journey for each individual. Whether you seek physical relief,
            emotional balance, or spiritual awakening, your path begins here.
          </p>
          <blockquote>
            "The greatest healing comes when we reconnect with the natural rhythms within and around us."
            <cite>— Tony</cite>
          </blockquote>
        </div>

        <div class="philosophy-image fade-in-right">
          <OptimizedImage
            src="/og-images/purple-light.jpg"
            alt="Mystical purple light - Healing arts in harmony with nature"
            class="philosophy-photo"
            loading="eager"
            objectFit="cover"
            aspectRatio="1 / 1"
            placeholder={false}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials-section fade-in-scroll">
    <div class="container">
      <h2 class="section-title text-gradient-sunset">Client Experiences</h2>
      <p class="section-subtitle">Stories of transformation and healing</p>

      <div class="testimonials-grid">
        <div class="testimonial-card glass fade-in-up">
          <p class="testimonial-text">
            "Tony's energy work helped me release years of stored tension. I feel lighter, clearer, and more connected to myself than ever before."
          </p>
          <div class="testimonial-author">
            <strong>Sarah M.</strong>
            <span>Seattle, WA</span>
          </div>
        </div>

        <div class="testimonial-card glass fade-in-up fade-delay-100">
          <p class="testimonial-text">
            "The herbal remedies from the apothecary have become an essential part of my wellness routine. Natural, effective, and carefully crafted."
          </p>
          <div class="testimonial-author">
            <strong>Michael L.</strong>
            <span>Portland, OR</span>
          </div>
        </div>

        <div class="testimonial-card glass fade-in-up fade-delay-200">
          <p class="testimonial-text">
            "A truly transformative experience. The combination of massage and energy healing addressed issues I didn't even know I was carrying."
          </p>
          <div class="testimonial-author">
            <strong>Jennifer K.</strong>
            <span>Bellingham, WA</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Sections */
  section {
    padding: var(--space-16) 0;
    position: relative;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    text-align: center;
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    text-align: center;
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    color: var(--light-gray);
    margin-bottom: var(--space-8);
    font-weight: var(--font-weight-normal);
    font-style: italic;
  }

  /* Services Preview */
  .services-preview {
    background: rgba(15, 23, 42, 0.5);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }

  .service-card {
    padding: 0;
    border-radius: var(--radius-xl);
    text-align: center;
    transition: all var(--transition-base);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .service-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
    position: relative;
  }

  .service-photo {
    width: 100%;
    height: 100%;
  }

  .service-photo .optimized-image-container {
    width: 100%;
    height: 100%;
  }

  .service-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
    opacity: 1 !important;
  }

  .service-card:hover .service-photo img {
    transform: scale(1.05);
  }

  .service-card h3 {
    padding: var(--space-6) var(--space-6) var(--space-2);
    margin: 0;
  }

  .service-card p {
    padding: 0 var(--space-6) var(--space-6);
    margin: 0;
  }

  .service-card h3 {
    color: var(--sunset-gold);
    margin-bottom: var(--space-3);
    font-size: var(--text-2xl);
    padding: var(--space-6) var(--space-6) var(--space-2);
  }

  .service-card p {
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    padding: 0 var(--space-6) var(--space-6);
  }

  /* Book Inspiration Section */
  .book-inspiration {
    margin: var(--space-8) auto 0;
    padding: var(--space-12);
    background: rgba(15, 23, 42, 0.5);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(107, 70, 193, 0.2);
    max-width: 600px;
    width: 100%;
  }

  .book-inspiration-content {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-items: center;
  }

  .book-image {
    width: 400px;
    max-width: 100%;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    margin-bottom: var(--space-6);
  }

  .book-cover {
    width: 100%;
    height: 100%;
  }

  .book-cover .optimized-image-container {
    width: 100%;
    height: 100%;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .book-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    text-align: center;
    width: 100%;
  }

  .book-title {
    color: var(--sunset-gold);
    font-size: var(--text-2xl);
    margin: 0;
  }

  .book-text p {
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    font-size: var(--text-lg);
    margin: 0;
    max-width: none;
  }

  .services-cta {
    text-align: center;
  }

  .btn-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xl);
    color: var(--sunset-gold);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    transition: all var(--transition-base);
  }

  .btn-link:hover {
    color: var(--amber-glow);
    gap: var(--space-4);
  }

  /* Philosophy Section */
  .philosophy-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  .philosophy-text h2 {
    text-align: left;
    margin-bottom: var(--space-6);
  }

  .philosophy-text p {
    margin-bottom: var(--space-6);
    font-size: var(--text-lg);
    line-height: var(--line-height-relaxed);
  }

  .philosophy-text blockquote {
    margin: var(--space-8) 0;
    padding: var(--space-6);
    border-left: 4px solid var(--mystic-purple);
    background: rgba(107, 70, 193, 0.1);
    border-radius: var(--radius-md);
    font-style: italic;
    color: var(--off-white);
  }

  .philosophy-text cite {
    display: block;
    margin-top: var(--space-3);
    font-size: var(--text-sm);
    font-style: normal;
    color: var(--sunset-gold);
  }

  .philosophy-photo {
    width: 100%;
    height: 100%;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl), var(--shadow-glow-purple);
    border: 1px solid rgba(107, 70, 193, 0.3);
  }

  .philosophy-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Testimonials */
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
  }

  .testimonial-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
  }

  .testimonial-text {
    font-size: var(--text-lg);
    line-height: var(--line-height-relaxed);
    color: var(--light-gray);
    font-style: italic;
    margin-bottom: var(--space-6);
  }

  .testimonial-author {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .testimonial-author strong {
    color: var(--sunset-gold);
    font-size: var(--text-lg);
  }

  .testimonial-author span {
    color: var(--medium-gray);
    font-size: var(--text-sm);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    section {
      padding: var(--space-20) 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .service-image {
      height: 200px;
    }

    .book-inspiration {
      max-width: 100%;
      padding: var(--space-8);
    }

    .book-image {
      width: 300px;
      max-width: 100%;
    }

    .philosophy-content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .philosophy-text h2 {
      text-align: center;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }
</style>
