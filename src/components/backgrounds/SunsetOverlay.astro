    top: 0;
    left: 0;
    z-index: -1;
  }

  /* Clouds stay in top portion and move side-to-side */
  .clouds-layer-1,
  .clouds-layer-2 {
    transform-origin: center top;
  }

  .sun-group {
    animation: sun-pulse 10s ease-in-out infinite;
  }

  .light-rays {
    animation: rays-rotate 60s linear infinite;
    transform-origin: 600px 550px;
  }

  @keyframes sun-pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes rays-rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(15deg);
    }
  }
</style>

<script>
  // Keep clouds fixed above the fold while allowing side-to-side movement
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const sun = document.querySelector('.sun-group') as HTMLElement;
    const svg = document.querySelector('.sunset-overlay-bg') as HTMLElement;
    
    // Sun moves with parallax
    if (sun) sun.style.transform = `translateY(${scrolled * 0.05}px)`;
    
    // Keep clouds in viewport top - they stay above the fold
    // The SVG itself moves, but clouds are positioned in the top portion
    if (svg) {
      // Calculate how much to shift SVG to keep clouds visible
      // Clouds are in top 40% of viewBox (y: 150-320 out of 800)
      const maxScroll = window.innerHeight * 0.4;
      const cloudOffset = Math.min(scrolled, maxScroll);
      svg.style.transform = `translateY(${-cloudOffset}px)`;
    }
  });
</script>
