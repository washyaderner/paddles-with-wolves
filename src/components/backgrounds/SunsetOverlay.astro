---
// Sunset Gradient Overlay SVG Background
---

<svg
  class="sunset-overlay-bg"
  viewBox="0 0 1200 800"
  preserveAspectRatio="xMidYMid slice"
  xmlns="http://www.w3.org/2000/svg"
>
  <defs>
    <!-- Deep Blue Sky Gradient -->
    <linearGradient id="sunset-sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#0A3A4A;stop-opacity:1">
        <animate attributeName="stop-color" values="#0A3A4A;#0F4A5A;#0A3A4A" dur="20s" repeatCount="indefinite"/>
      </stop>
      <stop offset="20%" style="stop-color:#1A5F7A;stop-opacity:1">
        <animate attributeName="stop-color" values="#1A5F7A;#2A6F8A;#1A5F7A" dur="20s" repeatCount="indefinite"/>
      </stop>
      <stop offset="40%" style="stop-color:#0369A1;stop-opacity:1">
        <animate attributeName="stop-color" values="#0369A1;#0479B1;#0369A1" dur="20s" repeatCount="indefinite"/>
      </stop>
      <stop offset="60%" style="stop-color:#0891B2;stop-opacity:1">
        <animate attributeName="stop-color" values="#0891B2;#18A1C2;#0891B2" dur="20s" repeatCount="indefinite"/>
      </stop>
      <stop offset="80%" style="stop-color:#0EA5E9;stop-opacity:1">
        <animate attributeName="stop-color" values="#0EA5E9;#1EB5F9;#0EA5E9" dur="20s" repeatCount="indefinite"/>
      </stop>
      <stop offset="100%" style="stop-color:#57B8D4;stop-opacity:1">
        <animate attributeName="stop-color" values="#57B8D4;#67C8E4;#57B8D4" dur="20s" repeatCount="indefinite"/>
      </stop>
    </linearGradient>

    <!-- Green Grass Hill Gradient -->
    <linearGradient id="horizon-glow" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#2D5F4C;stop-opacity:0.9" />
      <stop offset="30%" style="stop-color:#7BA05B;stop-opacity:0.8" />
      <stop offset="60%" style="stop-color:#7BA05B;stop-opacity:0.7" />
      <stop offset="100%" style="stop-color:#2D5F4C;stop-opacity:0.6" />
    </linearGradient>

    <!-- Sun Glow Gradient -->
    <radialGradient id="sun-glow">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="15%" style="stop-color:#FDB462;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#FDB462;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#F2A74B;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#FDB462;stop-opacity:0" />
    </radialGradient>

    <!-- Cloud Gradient -->
    <linearGradient id="cloud-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#C8E3E8;stop-opacity:0.7" />
      <stop offset="50%" style="stop-color:#E2E8F0;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#C8E3E8;stop-opacity:0.7" />
    </linearGradient>
  </defs>

  <!-- Main Sunset Sky -->
  <rect x="0" y="0" width="1200" height="800" fill="url(#sunset-sky)"/>

  <!-- Sun positioned behind the hill (partially hidden) -->
  <g class="sun-group">
    <!-- Sun rays emanating from behind the hill -->
    <g class="light-rays" opacity="0.3">
      <path
        d="M 600,620 L 200,100"
        stroke="#FDB462"
        stroke-width="40"
        stroke-linecap="round"
        opacity="0.4"
      >
        <animate attributeName="opacity" values="0.2;0.5;0.2" dur="6s" repeatCount="indefinite"/>
      </path>
      <path
        d="M 600,620 L 450,50"
        stroke="#FDB462"
        stroke-width="50"
        stroke-linecap="round"
        opacity="0.5"
      >
        <animate attributeName="opacity" values="0.3;0.6;0.3" dur="7s" repeatCount="indefinite"/>
      </path>
      <path
        d="M 600,620 L 750,50"
        stroke="#FDB462"
        stroke-width="50"
        stroke-linecap="round"
        opacity="0.5"
      >
        <animate attributeName="opacity" values="0.3;0.6;0.3" dur="7s" repeatCount="indefinite" begin="1s"/>
      </path>
      <path
        d="M 600,620 L 1000,100"
        stroke="#FDB462"
        stroke-width="40"
        stroke-linecap="round"
        opacity="0.4"
      >
        <animate attributeName="opacity" values="0.2;0.5;0.2" dur="6s" repeatCount="indefinite" begin="0.5s"/>
      </path>
    </g>
    
    <!-- Sun circle - partially hidden behind hill -->
    <circle cx="600" cy="620" r="120" fill="url(#sun-glow)" opacity="1">
      <animate attributeName="r" values="120;125;120" dur="8s" repeatCount="indefinite"/>
    </circle>
    <circle cx="600" cy="620" r="80" fill="#FDB462" opacity="1">
      <animate attributeName="r" values="80;82;80" dur="8s" repeatCount="indefinite"/>
    </circle>
  </g>

  <!-- Single Rolling Hill with Pine Trees -->
  <!-- Hill shape: one continuous rolling curve from left to right, high enough to cover sun -->
  <path
    d="M 0,650 Q 150,580 300,600 Q 450,610 550,600 Q 600,595 650,600 Q 750,610 900,600 Q 1050,590 1200,580 L 1200,800 L 0,800 Z"
    fill="url(#horizon-glow)"
    opacity="0.9"
  >
    <animate attributeName="opacity" values="0.85;0.95;0.85" dur="10s" repeatCount="indefinite"/>
  </path>

  <!-- Pine Tree Silhouettes positioned along the hill curve -->
  <g class="pine-trees" opacity="0.8">
    <!-- Left side trees - bases aligned with hill curve -->
    <path d="M 80,650 L 95,590 L 110,650 Z" fill="#1A3A2C" opacity="0.9"/>
    <path d="M 87,650 L 95,610 L 103,650 Z" fill="#1A3A2C" opacity="1"/>
    
    <path d="M 180,600 L 195,540 L 210,600 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="8s" repeatCount="indefinite"/>
    </path>
    <path d="M 187,600 L 195,560 L 203,600 Z" fill="#1A3A2C" opacity="1"/>
    
    <path d="M 280,605 L 295,545 L 310,605 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="9s" repeatCount="indefinite" begin="1s"/>
    </path>
    <path d="M 287,605 L 295,565 L 303,605 Z" fill="#1A3A2C" opacity="1"/>
    
    <!-- Center-left trees -->
    <path d="M 380,615 L 395,555 L 410,615 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="10s" repeatCount="indefinite" begin="0.5s"/>
    </path>
    <path d="M 387,615 L 395,575 L 403,615 Z" fill="#1A3A2C" opacity="1"/>
    
    <!-- Center trees (around sun area) -->
    <path d="M 480,610 L 495,550 L 510,610 Z" fill="#1A3A2C" opacity="0.7">
      <animate attributeName="opacity" values="0.6;0.8;0.6" dur="11s" repeatCount="indefinite" begin="1.5s"/>
    </path>
    <path d="M 487,610 L 495,570 L 503,610 Z" fill="#1A3A2C" opacity="0.8"/>
    
    <path d="M 520,608 L 535,548 L 550,608 Z" fill="#1A3A2C" opacity="0.7">
      <animate attributeName="opacity" values="0.6;0.8;0.6" dur="11s" repeatCount="indefinite" begin="2s"/>
    </path>
    <path d="M 527,608 L 535,568 L 543,608 Z" fill="#1A3A2C" opacity="0.8"/>
    
    <!-- Center-right trees -->
    <path d="M 620,608 L 635,548 L 650,608 Z" fill="#1A3A2C" opacity="0.7">
      <animate attributeName="opacity" values="0.6;0.8;0.6" dur="10s" repeatCount="indefinite" begin="1.8s"/>
    </path>
    <path d="M 627,608 L 635,568 L 643,608 Z" fill="#1A3A2C" opacity="0.8"/>
    
    <path d="M 720,615 L 735,555 L 750,615 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="9s" repeatCount="indefinite" begin="2s"/>
    </path>
    <path d="M 727,615 L 735,575 L 743,615 Z" fill="#1A3A2C" opacity="1"/>
    
    <!-- Right side trees -->
    <path d="M 820,610 L 835,550 L 850,610 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="8s" repeatCount="indefinite" begin="0.8s"/>
    </path>
    <path d="M 827,610 L 835,570 L 843,610 Z" fill="#1A3A2C" opacity="1"/>
    
    <path d="M 920,605 L 935,545 L 950,605 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="10s" repeatCount="indefinite" begin="1.2s"/>
    </path>
    <path d="M 927,605 L 935,565 L 943,605 Z" fill="#1A3A2C" opacity="1"/>
    
    <path d="M 1020,602 L 1035,542 L 1050,602 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="9s" repeatCount="indefinite" begin="2.5s"/>
    </path>
    <path d="M 1027,602 L 1035,562 L 1043,602 Z" fill="#1A3A2C" opacity="1"/>
    
    <path d="M 1120,600 L 1135,540 L 1150,600 Z" fill="#1A3A2C" opacity="0.9">
      <animate attributeName="opacity" values="0.8;1;0.8" dur="8s" repeatCount="indefinite" begin="1.5s"/>
    </path>
    <path d="M 1127,600 L 1135,560 L 1143,600 Z" fill="#1A3A2C" opacity="1"/>
  </g>

  <!-- Stylized Clouds -->
  <g class="clouds-layer-1" opacity="0.6">
    <!-- Cloud 1 -->
    <ellipse cx="150" cy="150" rx="80" ry="30" fill="url(#cloud-gradient)">
      <animate attributeName="cx" values="150;180;150" dur="40s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="180" cy="160" rx="60" ry="25" fill="url(#cloud-gradient)"/>
    <ellipse cx="120" cy="165" rx="50" ry="20" fill="url(#cloud-gradient)"/>

    <!-- Cloud 2 -->
    <ellipse cx="900" cy="200" rx="100" ry="35" fill="url(#cloud-gradient)">
      <animate attributeName="cx" values="900;920;900" dur="45s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="940" cy="210" rx="70" ry="28" fill="url(#cloud-gradient)"/>
    <ellipse cx="860" cy="215" rx="60" ry="23" fill="url(#cloud-gradient)"/>
  </g>

  <g class="clouds-layer-2" opacity="0.5">
    <!-- Cloud 3 -->
    <ellipse cx="400" cy="280" rx="90" ry="32" fill="url(#cloud-gradient)">
      <animate attributeName="cx" values="400;430;400" dur="50s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="440" cy="290" rx="65" ry="26" fill="url(#cloud-gradient)"/>
    <ellipse cx="360" cy="295" rx="55" ry="22" fill="url(#cloud-gradient)"/>

    <!-- Cloud 4 -->
    <ellipse cx="1050" cy="320" rx="85" ry="30" fill="url(#cloud-gradient)">
      <animate attributeName="cx" values="1050;1070;1050" dur="55s" repeatCount="indefinite"/>
    </ellipse>
    <ellipse cx="1085" cy="330" rx="60" ry="24" fill="url(#cloud-gradient)"/>
  </g>

  <!-- Flying Birds Silhouettes -->
  <g class="birds" opacity="0.4">
    <path d="M 300,250 Q 295,245 290,250 Q 295,255 300,250" fill="none" stroke="#0A3A4A" stroke-width="2">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; 400,-100; 800,-200"
        dur="30s"
        repeatCount="indefinite"
      />
    </path>

    <path d="M 320,260 Q 315,255 310,260 Q 315,265 320,260" fill="none" stroke="#0A3A4A" stroke-width="1.5">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; 350,-90; 700,-180"
        dur="32s"
        repeatCount="indefinite"
      />
    </path>

    <path d="M 340,255 Q 335,250 330,255 Q 335,260 340,255" fill="none" stroke="#0A3A4A" stroke-width="2">
      <animateTransform
        attributeName="transform"
        type="translate"
        values="0,0; 450,-110; 900,-220"
        dur="35s"
        repeatCount="indefinite"
      />
    </path>
  </g>

  <!-- Atmospheric Particles/Dust -->
  <g class="particles">
    <circle cx="200" cy="300" r="1" fill="#FDB462" opacity="0.5">
      <animate attributeName="cy" values="300;100;300" dur="15s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.5;0.2;0.5" dur="15s" repeatCount="indefinite"/>
    </circle>

    <circle cx="500" cy="400" r="1.5" fill="#C8E3E8" opacity="0.4">
      <animate attributeName="cy" values="400;150;400" dur="18s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.4;0.1;0.4" dur="18s" repeatCount="indefinite"/>
    </circle>

    <circle cx="800" cy="350" r="1" fill="#F2A74B" opacity="0.6">
      <animate attributeName="cy" values="350;100;350" dur="20s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.6;0.2;0.6" dur="20s" repeatCount="indefinite"/>
    </circle>

    <circle cx="1000" cy="450" r="1.5" fill="#57B8D4" opacity="0.4">
      <animate attributeName="cy" values="450;200;450" dur="22s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.4;0.1;0.4" dur="22s" repeatCount="indefinite"/>
    </circle>
  </g>
</svg>

<style>
  .sunset-overlay-bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .sun-group {
    animation: sun-pulse 10s ease-in-out infinite;
  }

  .light-rays {
    animation: rays-rotate 60s linear infinite;
    transform-origin: 600px 550px;
  }

  @keyframes sun-pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes rays-rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(15deg);
    }
  }
</style>

<script>
  // Subtle parallax effect
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const sun = document.querySelector('.sun-group') as HTMLElement;
    const clouds1 = document.querySelector('.clouds-layer-1') as HTMLElement;
    const clouds2 = document.querySelector('.clouds-layer-2') as HTMLElement;

    if (sun) sun.style.transform = `translateY(${scrolled * 0.05}px)`;
    if (clouds1) clouds1.style.transform = `translateY(${scrolled * 0.1}px)`;
    if (clouds2) clouds2.style.transform = `translateY(${scrolled * 0.15}px)`;
  });
</script>
