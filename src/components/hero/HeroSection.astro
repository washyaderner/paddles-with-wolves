---
import EnergyParticles from './EnergyParticles.astro';
---

<section class="hero-section">
  <!-- Energy Particles Animation -->
  <EnergyParticles />

  <!-- Hero Content -->
  <div class="hero-content">
    <div class="hero-text-container fade-in-up">
      <h1 class="hero-title">
        Find Your Center,<br />
        <span class="highlight">Awaken Your Qi</span>
      </h1>

      <p class="hero-subtitle fade-in-up fade-delay-200">
        Pacific Northwest Healing Arts with Tony
      </p>

      <p class="hero-description fade-in-up fade-delay-300">
        Experience transformative healing through ancient wisdom and modern wellness practices.
        Balance your energy, restore your spirit, reconnect with nature.
      </p>

      <div class="hero-cta fade-in-up fade-delay-400">
        <a href="/booking" class="btn-primary glow-effect">
          Book Healing Session
        </a>
        <a href="/services" class="btn-ghost">
          Explore Services
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator fade-in-up fade-delay-500">
      <div class="scroll-icon">
        <div class="scroll-wheel"></div>
      </div>
      <span class="scroll-text">Scroll to explore</span>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 0 var(--space-4);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    padding: var(--space-20) 0;
  }

  .hero-text-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-family: var(--font-heading);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    margin-bottom: var(--space-6);
    color: var(--white);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-title .highlight {
    background: linear-gradient(
      135deg,
      var(--sunset-gold) 0%,
      var(--mystic-purple) 50%,
      var(--water-teal) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 8s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 3vw, 1.75rem);
    font-family: var(--font-heading);
    font-style: italic;
    color: var(--sunset-gold);
    margin-bottom: var(--space-8);
    letter-spacing: var(--letter-spacing-wide);
    opacity: 1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: var(--line-height-relaxed);
    color: var(--light-gray);
    margin-bottom: var(--space-12);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-16);
  }

  /* Primary Button */
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-10);
    font-size: var(--text-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--white);
    background: linear-gradient(135deg, var(--mystic-purple), var(--flame-orange));
    border: none;
    border-radius: var(--radius-full);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-lg), var(--shadow-glow-purple);
    position: relative;
    overflow: hidden;
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transition: left 0.5s ease;
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-2xl), var(--shadow-glow-healing);
  }

  .btn-primary:active {
    transform: translateY(-1px);
  }

  /* Ghost Button */
  .btn-ghost {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-10);
    font-size: var(--text-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--white);
    background: transparent;
    border: 2px solid var(--mystic-purple);
    border-radius: var(--radius-full);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-base);
    position: relative;
  }

  .btn-ghost::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: rgba(107, 70, 193, 0.2);
    border-radius: var(--radius-full);
    transition: width var(--transition-base);
    z-index: -1;
  }

  .btn-ghost:hover::before {
    width: 100%;
  }

  .btn-ghost:hover {
    border-color: var(--sunset-gold);
    color: var(--sunset-gold);
    box-shadow: var(--shadow-glow-purple);
    transform: translateY(-2px);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    opacity: 0.7;
    animation: bounce 2s ease-in-out infinite;
  }

  .scroll-icon {
    width: 30px;
    height: 50px;
    border: 2px solid var(--mystic-purple);
    border-radius: var(--radius-full);
    position: relative;
    box-shadow: var(--shadow-glow);
  }

  .scroll-wheel {
    width: 6px;
    height: 10px;
    background: var(--sunset-gold);
    border-radius: var(--radius-full);
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll-wheel 2s ease-in-out infinite;
  }

  @keyframes scroll-wheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 28px;
      opacity: 0.5;
    }
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .scroll-text {
    font-size: var(--text-sm);
    color: var(--medium-gray);
    letter-spacing: var(--letter-spacing-wide);
    text-transform: uppercase;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 100dvh; /* Use dynamic viewport height on mobile */
    }

    .hero-content {
      padding: var(--space-12) 0;
    }

    .hero-title {
      margin-bottom: var(--space-4);
    }

    .hero-subtitle {
      margin-bottom: var(--space-6);
    }

    .hero-description {
      margin-bottom: var(--space-8);
      font-size: var(--text-base);
    }

    .hero-cta {
      flex-direction: column;
      gap: var(--space-3);
      margin-bottom: var(--space-12);
    }

    .btn-primary,
    .btn-ghost {
      width: 100%;
      max-width: 320px;
      padding: var(--space-3) var(--space-8);
      font-size: var(--text-base);
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-title .highlight,
    .scroll-wheel,
    .scroll-indicator,
    .btn-primary::before {
      animation: none;
    }

    .btn-primary:hover,
    .btn-ghost:hover {
      transform: none;
    }
  }
</style>
