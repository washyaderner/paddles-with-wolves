---
// Rain Particles Component - Animated light blue rain drops falling gently
---

<div class="energy-particles-container">
  <canvas id="energy-canvas"></canvas>
</div>

<style>
  .energy-particles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  #energy-canvas {
    width: 100%;
    height: 100%;
    display: block;
  }
</style>

<script>
  import { gsap } from 'gsap';

  // Rain Particle Class
  class EnergyParticle {
    x: number;
    y: number;
    vx: number;
    vy: number;
    radius: number;
    alpha: number;
    color: string;
    pulseSpeed: number;
    pulsePhase: number;

    constructor(canvasWidth: number, canvasHeight: number) {
      // Start particles from top of screen
      this.x = Math.random() * canvasWidth;
      this.y = -50 - Math.random() * 100;

      // Velocity - falling down with slight horizontal drift
      this.vx = (Math.random() - 0.5) * 0.5;
      this.vy = Math.random() * 2 + 1; // Always moving down

      // Appearance - darker and more opaque for better visibility
      this.radius = Math.random() * 2 + 1;
      this.alpha = Math.random() * 0.2 + 0.7; // Much more opaque for clear visibility

      // Color palette - darker blue shades for rain
      const colors = [
        '#5F9EA0', // cadet-blue
        '#4682B4', // steel-blue
        '#6495ED', // cornflower-blue
        '#4169E1', // royal-blue
        '#6A9BD1', // medium blue
      ];
      this.color = colors[Math.floor(Math.random() * colors.length)];

      // Subtle pulsing effect
      this.pulseSpeed = Math.random() * 0.03 + 0.01;
      this.pulsePhase = Math.random() * Math.PI * 2;
    }

    update(canvasWidth: number, canvasHeight: number, mouseX: number | null, mouseY: number | null) {
      // Update position - rain falls down
      this.x += this.vx;
      this.y += this.vy;

      // Subtle mouse interaction - rain slightly drifts around cursor
      if (mouseX !== null && mouseY !== null) {
        const dx = mouseX - this.x;
        const dy = mouseY - this.y;
        const distance = Math.sqrt(dx * dx + dy * dy);

        if (distance < 150) {
          const force = (150 - distance) / 150;
          this.vx += (dx / distance) * force * 0.05;
          // Don't affect vertical movement much - rain should keep falling
        }
      }

      // Apply slight friction for natural movement
      this.vx *= 0.99;
      this.vy *= 0.995;

      // Slight acceleration downward for realistic rain
      this.vy += 0.02;

      // Pulse effect
      this.pulsePhase += this.pulseSpeed;

      // Reset particle when it goes off bottom of screen
      if (this.y > canvasHeight + 50) {
        this.y = -50 - Math.random() * 100;
        this.x = Math.random() * canvasWidth;
        this.vx = (Math.random() - 0.5) * 0.5;
        this.vy = Math.random() * 2 + 1;
      }

      // Wrap horizontally
      if (this.x < -50) this.x = canvasWidth + 50;
      if (this.x > canvasWidth + 50) this.x = -50;
    }

    draw(ctx: CanvasRenderingContext2D) {
      const pulse = Math.sin(this.pulsePhase) * 0.3 + 0.7;
      const currentRadius = this.radius + pulse * 0.5;
      const currentAlpha = this.alpha + pulse * 0.05;

      // Draw subtle glow for rain drop
      const gradient = ctx.createRadialGradient(
        this.x, this.y, 0,
        this.x, this.y, currentRadius * 2.5
      );
      gradient.addColorStop(0, `${this.color}${Math.floor(currentAlpha * 255).toString(16).padStart(2, '0')}`);
      gradient.addColorStop(0.4, `${this.color}${Math.floor(currentAlpha * 0.4 * 255).toString(16).padStart(2, '0')}`);
      gradient.addColorStop(1, 'transparent');

      ctx.fillStyle = gradient;
      ctx.beginPath();
      ctx.arc(this.x, this.y, currentRadius * 2.5, 0, Math.PI * 2);
      ctx.fill();

      // Draw core rain drop - more opaque for better visibility
      ctx.fillStyle = `${this.color}${Math.floor((currentAlpha + 0.15) * 255).toString(16).padStart(2, '0')}`;
      ctx.beginPath();
      ctx.arc(this.x, this.y, currentRadius, 0, Math.PI * 2);
      ctx.fill();
    }
  }

  // Initialize rain particles
  function initEnergyParticles() {
    const canvas = document.getElementById('energy-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // Set canvas size
    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    // Create rain particles - doubled count for denser rain effect
    const particleCount = window.innerWidth < 768 ? 80 : 120;
    const particles: EnergyParticle[] = [];

    for (let i = 0; i < particleCount; i++) {
      particles.push(new EnergyParticle(canvas.width, canvas.height));
      // Stagger initial positions - start from top
      particles[i].y = -50 - Math.random() * canvas.height;
    }

    // Mouse tracking
    let mouseX: number | null = null;
    let mouseY: number | null = null;

    canvas.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    canvas.addEventListener('mouseleave', () => {
      mouseX = null;
      mouseY = null;
    });

    // Touch support
    canvas.addEventListener('touchmove', (e) => {
      if (e.touches.length > 0) {
        mouseX = e.touches[0].clientX;
        mouseY = e.touches[0].clientY;
      }
    });

    canvas.addEventListener('touchend', () => {
      mouseX = null;
      mouseY = null;
    });

    // Animation loop using GSAP ticker
    gsap.ticker.add(() => {
      // Clear canvas
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Update and draw particles
      particles.forEach(particle => {
        particle.update(canvas.width, canvas.height, mouseX, mouseY);
        particle.draw(ctx);
      });
    });

    // Add entrance animation
    gsap.from(canvas, {
      opacity: 0,
      duration: 2,
      ease: 'power2.out'
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initEnergyParticles);
  } else {
    initEnergyParticles();
  }

  // Re-initialize on navigation (for Astro View Transitions)
  document.addEventListener('astro:page-load', initEnergyParticles);
</script>
