          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .booking-confirmation {
    padding: var(--space-20) 0 var(--space-32);
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .confirmation-card {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-12);
    border-radius: var(--radius-2xl);
    text-align: center;
    border: 2px solid var(--sunset-gold);
    box-shadow: var(--shadow-2xl), var(--shadow-glow-healing);
  }

  /* Success Animation */
  .success-animation {
    position: relative;
    margin: 0 auto var(--space-8);
    width: 120px;
    height: 120px;
  }

  .success-circle {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .success-checkmark {
    width: 100%;
    height: 100%;
    animation: scaleIn 0.5s ease-out 0.2s both;
  }

  .success-circle-bg {
    stroke: var(--forest-green);
    stroke-width: 2;
    stroke-dasharray: 166;
    stroke-dashoffset: 166;
    animation: drawCircle 0.6s ease-out forwards;
  }

  .success-checkmark-check {
    stroke: var(--forest-green);
    stroke-width: 3;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke-dasharray: 48;
    stroke-dashoffset: 48;
    animation: drawCheck 0.6s ease-out 0.4s forwards;
  }

  @keyframes drawCircle {
    to {
      stroke-dashoffset: 0;
    }
  }

  @keyframes drawCheck {
    to {
      stroke-dashoffset: 0;
    }
  }

  @keyframes scaleIn {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Success Particles */
  .success-particles {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .success-particle {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--sunset-gold);
    border-radius: 50%;
    opacity: 0;
  }

  .success-particle:nth-child(1) {
    top: 50%;
    left: 50%;
    animation: particleBurst 1s ease-out 0.6s;
  }

  .success-particle:nth-child(2) {
    top: 50%;
    left: 50%;
    animation: particleBurst 1s ease-out 0.7s;
  }

  .success-particle:nth-child(3) {
    top: 50%;
    left: 50%;
    animation: particleBurst 1s ease-out 0.8s;
  }

  .success-particle:nth-child(4) {
    top: 50%;
    left: 50%;
    animation: particleBurst 1s ease-out 0.9s;
  }

  .success-particle:nth-child(5) {
    top: 50%;
    left: 50%;
    animation: particleBurst 1s ease-out 1s;
  }

  .success-particle:nth-child(6) {
    top: 50%;
    left: 50%;
    animation: particleBurst 1s ease-out 1.1s;
  }

  @keyframes particleBurst {
    0% {
      transform: translate(0, 0) scale(0);
      opacity: 1;
    }
    100% {
      transform: translate(var(--tx, 60px), var(--ty, -60px)) scale(1);
      opacity: 0;
    }
  }

  .success-particle:nth-child(1) { --tx: 60px; --ty: -60px; }
  .success-particle:nth-child(2) { --tx: 80px; --ty: 0px; }
  .success-particle:nth-child(3) { --tx: 60px; --ty: 60px; }
  .success-particle:nth-child(4) { --tx: -60px; --ty: 60px; }
  .success-particle:nth-child(5) { --tx: -80px; --ty: 0px; }
  .success-particle:nth-child(6) { --tx: -60px; --ty: -60px; }

  /* Confirmation Content */
  .confirmation-content {
    animation: fadeInUp 0.6s ease-out 0.8s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .confirmation-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--space-4);
  }

  .confirmation-message {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-8);
  }

  /* Booking Details */
  .booking-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    text-align: left;
  }

  .detail-card {
    padding: var(--space-4);
    background: rgba(15, 23, 42, 0.4);
    border: 1px solid rgba(107, 70, 193, 0.3);
    border-radius: var(--radius-lg);
    display: flex;
    gap: var(--space-3);
  }

  .detail-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .detail-content h4 {
    font-size: var(--text-sm);
    color: var(--medium-gray);
    margin: 0 0 var(--space-1) 0;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .detail-value {
    font-size: var(--text-base);
    color: var(--white);
    font-weight: var(--font-weight-semibold);
    margin: 0;
  }

  .detail-separator {
    color: var(--medium-gray);
    margin: 0 var(--space-2);
  }

  /* Next Steps */
  .next-steps {
    text-align: left;
    padding: var(--space-6);
    background: rgba(107, 70, 193, 0.1);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-6);
  }

  .next-steps h3 {
    font-size: var(--text-xl);
    color: var(--sunset-gold);
    margin-bottom: var(--space-4);
    font-family: var(--font-heading);
  }

  .steps-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .steps-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
  }

  .step-icon {
    flex-shrink: 0;
    font-size: var(--text-xl);
  }

  /* Policy Note */
  .policy-note {
    padding: var(--space-4);
    background: rgba(253, 180, 98, 0.1);
    border: 1px solid rgba(253, 180, 98, 0.3);
    border-radius: var(--radius-lg);
    text-align: left;
    font-size: var(--text-sm);
    color: var(--light-gray);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-8);
  }

  .policy-note strong {
    color: var(--sunset-gold);
  }

  /* Confirmation Actions */
  .confirmation-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }

  .btn-primary,
  .btn-secondary {
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-full);
    font-size: var(--text-lg);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-base);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--mystic-purple), var(--flame-orange));
    color: var(--white);
    border: none;
    box-shadow: var(--shadow-lg);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-2xl), var(--shadow-glow-healing);
  }

  .btn-secondary {
    background: transparent;
    color: var(--white);
    border: 2px solid var(--mystic-purple);
  }

  .btn-secondary:hover {
    border-color: var(--sunset-gold);
    color: var(--sunset-gold);
    transform: translateY(-2px);
  }

  /* Calendar Actions */
  .calendar-actions {
    padding-top: var(--space-6);
    border-top: 1px solid rgba(107, 70, 193, 0.3);
  }

  .calendar-prompt {
    font-size: var(--text-sm);
    color: var(--medium-gray);
    margin-bottom: var(--space-4);
  }

  .calendar-buttons {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
  }

  .calendar-btn {
    padding: var(--space-3) var(--space-5);
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(107, 70, 193, 0.3);
    border-radius: var(--radius-lg);
    color: var(--light-gray);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .calendar-btn:hover {
    border-color: var(--sunset-gold);
    color: var(--white);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .confirmation-card {
      padding: var(--space-8);
    }

    .booking-details {
      grid-template-columns: 1fr;
    }

    .confirmation-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
    }

    .calendar-buttons {
      flex-direction: column;
    }

    .calendar-btn {
      width: 100%;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .success-checkmark,
    .success-circle-bg,
    .success-checkmark-check,
    .success-particle,
    .confirmation-content {
      animation: none;
    }
  }
</style>

<script>
  function initBookingConfirmation() {
    const confirmationSection = document.getElementById('booking-confirmation');
    const calendarButtons = document.querySelectorAll('.calendar-btn');

    // Check for booking confirmation in URL or sessionStorage
    const urlParams = new URLSearchParams(window.location.search);
    const isConfirmed = urlParams.get('confirmed') === 'true';

    if (isConfirmed) {
      // Show confirmation
      if (confirmationSection) {
        confirmationSection.style.display = 'block';

        // Populate with data from sessionStorage
        const selectedService = sessionStorage.getItem('selectedService');
        if (selectedService) {
          try {
            const service = JSON.parse(selectedService);
            populateConfirmation(service);
          } catch (e) {
            console.error('Error parsing service data:', e);
          }
        }
      }
    }

    // Calendar button handlers
    calendarButtons.forEach(button => {
      button.addEventListener('click', () => {
        const calendarType = button.getAttribute('data-calendar');
        addToCalendar(calendarType);
      });
    });
  }

  function populateConfirmation(service: any) {
    const confirmedService = document.getElementById('confirmed-service');
    const confirmedDuration = document.getElementById('confirmed-duration');
    const confirmedPrice = document.getElementById('confirmed-price');

    if (confirmedService) confirmedService.textContent = service.name || 'Service';
    if (confirmedDuration) {
      const durationText = service.duration === 30 ? '30 minutes' :
                          service.duration === 60 ? '1 hour' :
                          service.duration === 90 ? '1.5 hours' :
                          service.duration === 120 ? '2 hours' :
                          `${service.duration} minutes`;
      confirmedDuration.textContent = durationText;
    }
    if (confirmedPrice) {
      confirmedPrice.textContent = service.price === 0 ? 'Free' : `$${service.price}`;
    }
  }

  function addToCalendar(type: string | null) {
    // TODO: Implement calendar link generation
    // This would typically be handled by Cal.com
    console.log('Add to calendar:', type);
    alert(`Calendar integration for ${type} coming soon!`);
  }

  // Initialize confirmation
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBookingConfirmation);
  } else {
    initBookingConfirmation();
  }

  // Re-initialize on navigation
  document.addEventListener('astro:page-load', initBookingConfirmation);
</script>
