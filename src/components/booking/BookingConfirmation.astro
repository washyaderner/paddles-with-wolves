---
/**
 * BookingConfirmation Component
 * Displays confirmation after successful Cal.com booking
 * This template can be triggered via Cal.com webhooks or redirect
 */

interface Props {
  bookingData?: {
    serviceName?: string;
    duration?: number;
    price?: number;
    date?: string;
    time?: string;
    customerName?: string;
    customerEmail?: string;
    confirmationNumber?: string;
  };
}

const { bookingData } = Astro.props;
---

<section class="booking-confirmation" id="booking-confirmation" style="display: none;">
  <div class="container">
    <div class="confirmation-card glass">
      <!-- Success Animation -->
      <div class="success-animation">
        <div class="success-circle">
          <div class="success-checkmark">
            <svg viewBox="0 0 52 52" xmlns="http://www.w3.org/2000/svg">
              <circle class="success-circle-bg" cx="26" cy="26" r="25" fill="none"/>
              <path class="success-checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
            </svg>
          </div>
        </div>
        <div class="success-particles">
          <div class="success-particle"></div>
          <div class="success-particle"></div>
          <div class="success-particle"></div>
