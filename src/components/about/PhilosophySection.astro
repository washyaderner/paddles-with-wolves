<style>
  .philosophy-section {
    padding: var(--space-32) 0;
    background: rgba(15, 23, 42, 0.3);
    position: relative;
  }

  /* Header */
  .philosophy-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: var(--space-4);
  }

  .section-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--medium-gray);
    font-style: italic;
  }

  /* Philosophy Grid */
  .philosophy-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  .philosophy-card {
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    transition: all var(--transition-base);
  }

  .philosophy-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl), var(--shadow-glow-purple);
  }

  .main-philosophy {
    grid-column: 1 / -1;
  }

  .card-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
    filter: drop-shadow(0 0 10px rgba(107, 70, 193, 0.5));
  }

  .philosophy-card h3 {
    font-size: var(--text-2xl);
    color: var(--sunset-gold);
    margin-bottom: var(--space-4);
    font-family: var(--font-heading);
  }

  .philosophy-card p {
    font-size: var(--text-base);
    line-height: var(--line-height-relaxed);
    color: var(--light-gray);
    margin-bottom: var(--space-3);
  }

  .philosophy-card p:last-child {
    margin-bottom: 0;
  }

  /* Quote Section */
  .philosophy-quote {
    margin-bottom: var(--space-20);
  }

  .quote-content {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-12);
    border-radius: var(--radius-2xl);
    position: relative;
    text-align: center;
  }

  .quote-mark {
    font-size: 6rem;
    font-family: var(--font-heading);
    color: var(--sunset-gold);
    opacity: 0.3;
    line-height: 1;
    margin-bottom: var(--space-4);
  }

  .quote-content blockquote {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    line-height: var(--line-height-relaxed);
    color: var(--off-white);
    font-style: italic;
    margin: 0 0 var(--space-6) 0;
    border: none;
    background: none;
    padding: 0;
  }

  .quote-content cite {
    display: block;
    font-size: var(--text-lg);
    color: var(--sunset-gold);
    font-style: normal;
    font-weight: var(--font-weight-semibold);
  }

  .quote-decoration {
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--mystic-purple), transparent);
    margin: var(--space-6) auto 0;
  }

  /* Approach Section */
  .approach-section {
    margin-top: var(--space-20);
  }

  .approach-title {
    font-size: var(--text-3xl);
    color: var(--sunset-gold);
    text-align: center;
    margin-bottom: var(--space-12);
    font-family: var(--font-heading);
  }

  .approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-8);
  }

  .approach-item {
    position: relative;
    padding: var(--space-6);
    background: rgba(30, 41, 59, 0.3);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(107, 70, 193, 0.2);
    border-radius: var(--radius-xl);
    transition: all var(--transition-base);
  }

  .approach-item:hover {
    border-color: var(--sunset-gold);
    background: rgba(30, 41, 59, 0.5);
  }

  .approach-number {
    display: inline-block;
    font-size: var(--text-5xl);
    font-family: var(--font-heading);
    font-weight: var(--font-weight-bold);
    background: linear-gradient(135deg, var(--sunset-gold), var(--mystic-purple));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
    margin-bottom: var(--space-3);
    opacity: 0.5;
  }

  .approach-item h4 {
    font-size: var(--text-xl);
    color: var(--white);
    margin-bottom: var(--space-3);
  }

  .approach-item p {
    font-size: var(--text-base);
    line-height: var(--line-height-relaxed);
    color: var(--light-gray);
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .philosophy-section {
      padding: var(--space-20) 0;
    }

    .philosophy-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .main-philosophy {
      grid-column: 1;
    }

    .quote-content {
      padding: var(--space-8);
    }

    .quote-mark {
      font-size: 4rem;
    }

    .approach-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }
</style>
