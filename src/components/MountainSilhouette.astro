---
// Mountain and Water Silhouette SVG Background
---

<svg
  class="mountain-silhouette"
  viewBox="0 0 1200 400"
  preserveAspectRatio="xMidYMax slice"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Definitions for gradients -->
  <defs>
    <linearGradient id="mountain-gradient-1" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#0F172A;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1E293B;stop-opacity:1" />
    </linearGradient>

    <linearGradient id="mountain-gradient-2" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1E293B;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#334155;stop-opacity:0.9" />
    </linearGradient>

    <linearGradient id="water-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#0891B2;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#0369A1;stop-opacity:0.5" />
    </linearGradient>
  </defs>

  <!-- Water/Lake Layer -->
  <path
    class="water-layer"
    d="M 0,320 Q 300,300 600,310 T 1200,320 L 1200,400 L 0,400 Z"
    fill="url(#water-gradient)"
  />

  <!-- Distant Mountains (Layer 1 - furthest) -->
  <path
    class="mountain-layer-1"
    d="M 0,300 L 100,200 L 200,240 L 350,150 L 500,220 L 650,180 L 800,240 L 950,200 L 1100,260 L 1200,240 L 1200,400 L 0,400 Z"
    fill="url(#mountain-gradient-1)"
    opacity="0.4"
  />

  <!-- Mid Mountains (Layer 2) -->
  <path
    class="mountain-layer-2"
    d="M 0,340 L 150,260 L 250,280 L 400,200 L 550,260 L 700,220 L 850,270 L 1000,240 L 1200,280 L 1200,400 L 0,400 Z"
    fill="url(#mountain-gradient-2)"
    opacity="0.6"
  />

  <!-- Close Mountains (Layer 3 - closest) -->
  <path
    class="mountain-layer-3"
    d="M 0,360 L 200,300 L 350,320 L 500,260 L 700,310 L 900,280 L 1100,330 L 1200,310 L 1200,400 L 0,400 Z"
    fill="#0F172A"
    opacity="0.8"
  />

  <!-- Pine Trees Silhouettes (scattered on mountains) -->
  <g class="trees" opacity="0.5">
    <!-- Tree 1 -->
    <polygon points="220,310 215,320 225,320" fill="#0A0A0A" />
    <polygon points="220,315 213,330 227,330" fill="#0A0A0A" />
    <rect x="218" y="330" width="4" height="10" fill="#0A0A0A" />

    <!-- Tree 2 -->
    <polygon points="540,280 535,290 545,290" fill="#0A0A0A" />
    <polygon points="540,285 533,300 547,300" fill="#0A0A0A" />
    <rect x="538" y="300" width="4" height="12" fill="#0A0A0A" />

    <!-- Tree 3 -->
    <polygon points="760,300 755,310 765,310" fill="#0A0A0A" />
    <polygon points="760,305 753,320 767,320" fill="#0A0A0A" />
    <rect x="758" y="320" width="4" height="10" fill="#0A0A0A" />

    <!-- Tree 4 -->
    <polygon points="420,310 415,320 425,320" fill="#0A0A0A" />
    <polygon points="420,315 413,330 427,330" fill="#0A0A0A" />
    <rect x="418" y="330" width="4" height="10" fill="#0A0A0A" />

    <!-- Tree 5 -->
    <polygon points="950,295 945,305 955,305" fill="#0A0A0A" />
    <polygon points="950,300 943,315 957,315" fill="#0A0A0A" />
    <rect x="948" y="315" width="4" height="12" fill="#0A0A0A" />
  </g>

  <!-- Moon/Sun accent (optional) -->
  <circle
    class="celestial"
    cx="150"
    cy="100"
    r="40"
    fill="#FDB462"
    opacity="0.2"
  />

  <!-- Stars (optional decorative elements) -->
  <g class="stars" opacity="0.3">
    <circle cx="300" cy="80" r="2" fill="#FFFFFF" />
    <circle cx="500" cy="60" r="1.5" fill="#FFFFFF" />
    <circle cx="700" cy="90" r="1" fill="#FFFFFF" />
    <circle cx="900" cy="70" r="2" fill="#FFFFFF" />
    <circle cx="1050" cy="100" r="1.5" fill="#FFFFFF" />
    <circle cx="400" cy="120" r="1" fill="#FFFFFF" />
    <circle cx="800" cy="50" r="1.5" fill="#FFFFFF" />
  </g>
</svg>

<style>
  .mountain-silhouette {
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
  }

  /* Subtle animations for depth */
  .mountain-layer-1 {
    animation: float 20s ease-in-out infinite;
  }

  .mountain-layer-2 {
    animation: float 15s ease-in-out infinite;
    animation-delay: -5s;
  }

  .mountain-layer-3 {
    animation: float 12s ease-in-out infinite;
    animation-delay: -3s;
  }

  .water-layer {
    animation: wave 10s ease-in-out infinite;
  }

  .celestial {
    animation: glow 8s ease-in-out infinite;
  }

  .stars {
    animation: twinkle 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  @keyframes wave {
    0%, 100% {
      transform: translateY(0) scaleY(1);
    }
    50% {
      transform: translateY(-3px) scaleY(1.02);
    }
  }

  @keyframes glow {
    0%, 100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.3;
    }
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }
</style>

<script>
  // Add parallax effect on scroll
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const layers = document.querySelectorAll('.mountain-layer-1, .mountain-layer-2, .mountain-layer-3');

    layers.forEach((layer, index) => {
      const speed = (index + 1) * 0.1;
      const element = layer as HTMLElement;
      element.style.transform = `translateY(${scrolled * speed}px)`;
    });
  });
</script>
