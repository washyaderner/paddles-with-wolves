---
/**
 * Loading Screen Component
 * Displays on page load with animated energy particles
 */
---

<div id="loading-screen" class="loading-screen">
  <div class="loading-content">
    <div class="loading-logo">
      <span class="logo-icon">üê∫</span>
      <span class="logo-text">Paddles with Wolves</span>
    </div>
    <canvas id="loading-canvas" class="loading-canvas"></canvas>
    <div class="loading-text">Awakening the energy...</div>
    <div class="loading-progress">
      <div class="progress-bar" id="progress-bar"></div>
    </div>
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg,
      rgba(15, 23, 42, 1) 0%,
      rgba(30, 41, 59, 1) 50%,
      rgba(15, 23, 42, 1) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 1;
    transition: opacity 0.6s ease-out;
  }

  .loading-screen.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .loading-content {
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .loading-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    margin-bottom: var(--space-8);
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      filter: drop-shadow(0 0 20px rgba(107, 70, 193, 0.5));
    }
    50% {
      filter: drop-shadow(0 0 40px rgba(107, 70, 193, 0.8));
    }
  }

  .logo-icon {
    font-size: 4rem;
    animation: float-rotate 3s ease-in-out infinite;
  }

  @keyframes float-rotate {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(5deg);
    }
  }

  .logo-text {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-weight-bold);
    background: linear-gradient(135deg, var(--sunset-gold), var(--mystic-purple));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .loading-canvas {
    width: 400px;
    height: 300px;
    max-width: 90vw;
    display: block;
    margin: 0 auto;
  }

  .loading-text {
    margin-top: var(--space-6);
    font-size: var(--text-lg);
    color: var(--light-gray);
    font-style: italic;
    animation: fade-pulse 2s ease-in-out infinite;
  }

  @keyframes fade-pulse {
    0%, 100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  .loading-progress {
    width: 300px;
    max-width: 90vw;
    height: 4px;
    background: rgba(107, 70, 193, 0.2);
    border-radius: 2px;
    margin: var(--space-6) auto 0;
    overflow: hidden;
    position: relative;
  }

  .progress-bar {
    height: 100%;
    background: linear-gradient(90deg,
      var(--mystic-purple) 0%,
      var(--sunset-gold) 50%,
      var(--mystic-purple) 100%);
    background-size: 200% 100%;
    border-radius: 2px;
    width: 0;
    transition: width 0.3s ease-out;
    animation: shimmer 2s linear infinite;
    box-shadow: 0 0 10px rgba(107, 70, 193, 0.6);
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .loading-logo,
    .logo-icon,
    .loading-text,
    .progress-bar {
      animation: none;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .logo-icon {
      font-size: 3rem;
    }

    .logo-text {
      font-size: var(--text-xl);
    }

    .loading-canvas {
      width: 300px;
      height: 200px;
    }

    .loading-text {
      font-size: var(--text-base);
    }
  }
</style>

<script>
  class LoadingScreen {
    private canvas!: HTMLCanvasElement;
    private ctx!: CanvasRenderingContext2D;
    private particles: Particle[] = [];
    private animationId: number = 0;
    private progressBar!: HTMLElement;
    private loadingScreen!: HTMLElement;
    private progress: number = 0;

    constructor() {
      this.canvas = document.getElementById('loading-canvas') as HTMLCanvasElement;
      this.progressBar = document.getElementById('progress-bar') as HTMLElement;
      this.loadingScreen = document.getElementById('loading-screen') as HTMLElement;

      if (!this.canvas) return;

      this.ctx = this.canvas.getContext('2d')!;
      this.initCanvas();
      this.createParticles();
      this.animate();
      this.simulateLoading();
    }

    private initCanvas(): void {
      const dpr = window.devicePixelRatio || 1;
      const rect = this.canvas.getBoundingClientRect();

      this.canvas.width = rect.width * dpr;
      this.canvas.height = rect.height * dpr;

      this.ctx.scale(dpr, dpr);
      this.canvas.style.width = `${rect.width}px`;
      this.canvas.style.height = `${rect.height}px`;
    }

    private createParticles(): void {
      const centerX = this.canvas.width / (window.devicePixelRatio || 1) / 2;
      const centerY = this.canvas.height / (window.devicePixelRatio || 1) / 2;
      const particleCount = 80;

      for (let i = 0; i < particleCount; i++) {
        this.particles.push(new Particle(centerX, centerY, i));
      }
    }

    private animate = (): void => {
      const rect = this.canvas.getBoundingClientRect();
      this.ctx.clearRect(0, 0, rect.width, rect.height);

      // Draw connections between nearby particles
      this.particles.forEach((p1, i) => {
        this.particles.slice(i + 1).forEach(p2 => {
          const dx = p1.x - p2.x;
          const dy = p1.y - p2.y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < 100) {
            this.ctx.beginPath();
            this.ctx.strokeStyle = `rgba(107, 70, 193, ${0.2 * (1 - distance / 100)})`;
            this.ctx.lineWidth = 1;
            this.ctx.moveTo(p1.x, p1.y);
            this.ctx.lineTo(p2.x, p2.y);
            this.ctx.stroke();
          }
        });
      });

      // Update and draw particles
      this.particles.forEach(particle => {
        particle.update();
        particle.draw(this.ctx);
      });

      this.animationId = requestAnimationFrame(this.animate);
    };

    private simulateLoading(): void {
      const duration = 2000; // 2 seconds
      const startTime = Date.now();

      const updateProgress = () => {
        const elapsed = Date.now() - startTime;
        this.progress = Math.min((elapsed / duration) * 100, 100);

        if (this.progressBar) {
          this.progressBar.style.width = `${this.progress}%`;
        }

        if (this.progress < 100) {
          requestAnimationFrame(updateProgress);
        } else {
          // Loading complete
          setTimeout(() => this.hide(), 300);
        }
      };

      requestAnimationFrame(updateProgress);
    }

    private hide(): void {
      this.loadingScreen.classList.add('hidden');

      setTimeout(() => {
        cancelAnimationFrame(this.animationId);
        this.loadingScreen.remove();
      }, 600);
    }
  }

  class Particle {
    x: number;
    y: number;
    baseX: number;
    baseY: number;
    vx: number;
    vy: number;
    radius: number;
    color: string;
    angle: number;
    distance: number;
    speed: number;

    constructor(centerX: number, centerY: number, index: number) {
      this.angle = (Math.PI * 2 * index) / 80;
      this.distance = 80 + Math.random() * 40;
      this.baseX = centerX + Math.cos(this.angle) * this.distance;
      this.baseY = centerY + Math.sin(this.angle) * this.distance;
      this.x = this.baseX;
      this.y = this.baseY;
      this.vx = (Math.random() - 0.5) * 0.3;
      this.vy = (Math.random() - 0.5) * 0.3;
      this.radius = 2 + Math.random() * 2;
      this.speed = 0.001 + Math.random() * 0.002;

      // Color variations
      const colors = [
        'rgba(107, 70, 193, 0.8)',   // mystic purple
        'rgba(253, 180, 98, 0.8)',   // sunset gold
        'rgba(88, 129, 87, 0.8)',    // forest green
      ];
      this.color = colors[Math.floor(Math.random() * colors.length)];
    }

    update(): void {
      // Orbital motion
      this.angle += this.speed;
      const targetX = this.baseX + Math.cos(this.angle) * 20;
      const targetY = this.baseY + Math.sin(this.angle) * 20;

      // Smooth movement towards target
      this.x += (targetX - this.x) * 0.05;
      this.y += (targetY - this.y) * 0.05;

      // Add slight random motion
      this.x += this.vx;
      this.y += this.vy;
    }

    draw(ctx: CanvasRenderingContext2D): void {
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
      ctx.fillStyle = this.color;
      ctx.fill();

      // Glow effect
      ctx.shadowBlur = 10;
      ctx.shadowColor = this.color;
      ctx.fill();
      ctx.shadowBlur = 0;
    }
  }

  // Initialize loading screen
  let loadingScreen: LoadingScreen;

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      loadingScreen = new LoadingScreen();
    });
  } else {
    loadingScreen = new LoadingScreen();
  }

  // Handle Astro View Transitions
  document.addEventListener('astro:page-load', () => {
    // Don't show loading screen on subsequent navigations
    const screen = document.getElementById('loading-screen');
    if (screen) {
      screen.remove();
    }
  });
</script>
