---
/**
 * Optimized Image Component
 * Lazy loading, responsive images, and performance optimizations
 */

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  decoding?: 'async' | 'sync' | 'auto';
  fetchpriority?: 'high' | 'low' | 'auto';
  class?: string;
  objectFit?: 'cover' | 'contain' | 'fill' | 'none' | 'scale-down';
  aspectRatio?: string;
  sizes?: string;
  quality?: number;
  placeholder?: boolean;
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  decoding = 'async',
  fetchpriority = 'auto',
  class: className = '',
  objectFit = 'cover',
  aspectRatio,
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  quality = 80,
  placeholder = true,
} = Astro.props;

// Generate responsive image srcset (if using image service)
// For now, using simple src. In production, integrate with image CDN
const imageSrc = src;

// Calculate aspect ratio if width and height are provided
const calculatedAspectRatio = aspectRatio || (width && height ? `${width} / ${height}` : undefined);
---

<div class={`optimized-image-container ${className}`} data-aspect-ratio={calculatedAspectRatio}>
  {placeholder && loading === 'lazy' && (
    <div class="image-placeholder" aria-hidden="true"></div>
  )}

  <img
    src={imageSrc}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding={decoding}
    fetchpriority={fetchpriority}
    sizes={sizes}
    class="optimized-image"
    style={objectFit ? `object-fit: ${objectFit}` : undefined}
  />
</div>

<style define:vars={{ aspectRatio: calculatedAspectRatio }}>
  .optimized-image-container {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg,
      rgba(107, 70, 193, 0.1) 0%,
      rgba(253, 180, 98, 0.1) 100%);
  }

  .optimized-image-container[data-aspect-ratio] {
    aspect-ratio: var(--aspectRatio);
  }

  .image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg,
      rgba(107, 70, 193, 0.1) 0%,
      rgba(253, 180, 98, 0.15) 50%,
      rgba(107, 70, 193, 0.1) 100%);
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
    pointer-events: none;
    z-index: 1;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .optimized-image {
    width: 100%;
    height: 100%;
    display: block;
    position: relative;
    z-index: 2;
    transition: opacity 0.3s ease-in-out;
  }

  /* Fade in image when loaded */
  .optimized-image[loading="lazy"] {
    opacity: 0;
  }

  .optimized-image[loading="lazy"].loaded {
    opacity: 1;
  }

  /* Hide placeholder when image is loaded */
  .optimized-image-container:has(.optimized-image.loaded) .image-placeholder {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  /* Prevent layout shift */
  .optimized-image-container {
    contain: layout style paint;
  }

  /* Performance hints */
  .optimized-image {
    will-change: opacity;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .image-placeholder {
      animation: none;
      background: rgba(107, 70, 193, 0.1);
    }
  }
</style>

<script>
  // Add loaded class when image loads
  document.addEventListener('astro:page-load', () => {
    const images = document.querySelectorAll('.optimized-image[loading="lazy"]');

    images.forEach((img) => {
      if (img instanceof HTMLImageElement) {
        if (img.complete) {
          img.classList.add('loaded');
        } else {
          img.addEventListener('load', () => {
            img.classList.add('loaded');
          });
        }
      }
    });
  });
</script>
